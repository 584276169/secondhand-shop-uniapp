.detail_user text {
  font-size: 27rpx;
  margin-left: 15rpx;
}
.detail_user image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.detail_title {
  margin-top: 15rpx;
  font-size: 35rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  /* 这里是超出几行省略 */
  overflow: hidden;
}
.detail_price {
  margin-top: 25rpx;
}
.detail_price .secondHandPrice {
  font-size: 55rpx;
  color: #E31D1C;
}
.detail_picUrl {
  margin: 15rpx auto;
}
.detail_picUrl image {
  width: 100%;
  border-radius: 25rpx;
}
.detail_remarks {
  font-size: 30rpx;
  margin-top: 15rpx;
}
.share {
  position: absolute;
  right: 25rpx;
}
.share button {
  background-color: #FFFFFF;
  padding: 0;
}
.share button image {
  width: 45rpx;
  height: 45rpx;
}
.share button::after {
  border: none;
}

