.right {
  display: flex;
  flex-direction: row-reverse;
}
.left {
  display: flex;
  flex-direction: row;
}
.talk_box_content {
  display: flex;
  align-items: flex-start;
}
.talk_box_content image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: 10rpx;
}
.talk_box_right {
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}
.talk_box_left {
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
}
.talk_box_content_left {
  display: flex;
  align-items: flex-start;
}
.talk_box_content_left image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.talk_content_right {
  padding: 10rpx 20rpx;
  background-color: #4cd964;
  border-radius: 25rpx;
  color: #FFFFFF;
  font-size: 30rpx;
}
.talk_content_right image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
}
.talk_content_left {
  font-size: 30rpx;
  display: inline-block;
  padding: 10rpx 20rpx;
  background-color: #FFFFFF;
  border-radius: 25rpx;
}
.talk_content_left image {
  border-radius: 10rpx;
  width: 180rpx;
  height: 180rpx;
}
.newTip {
  font-size: 22rpx;
  color: #999;
  display: inline-block;
  margin-right: 20rpx;
}
.talk_time_right {
  font-size: 22rpx;
  margin-top: 10rpx;
  color: #999;
  text-align: right;
}
.talk_time_left {
  text-align: left;
  font-size: 22rpx;
  margin-top: 10rpx;
  color: #999;
}
.bottom_input {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}
.bottom_input input {
  width: 500rpx;
  background-color: #FAFAFA;
  border-radius: 35rpx;
  height: 65rpx;
  font-size: 30rpx;
  padding-left: 25rpx;
}
.bottom_input .sendbtn {
  padding: 15rpx 35rpx;
  margin: 0 5rpx;
}
.top {
  position: fixed;
  z-index: 10;
  top: 0;
  left: 0;
  right: 0;
  background-color: #E31D1C;
  height: 120rpx;
  color: #FFFFFF;
  font-size: 35rpx;
}
.top image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 25rpx;
}
.bottom_product {
  border: 4rpx solid #eee;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 130rpx;
}
.bottom_product image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 25rpx;
}
.bottom_product .sendTo {
  position: absolute;
  right: 0;
  bottom: 0rpx;
}
.bottom_product .close {
  position: absolute;
  right: 0;
  top: 0;
  width: 25rpx;
  height: 5rpx;
  background: #333;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
}
.bottom_product .close::after {
  content: '';
  display: block;
  width: 25rpx;
  height: 5rpx;
  background: #333;
  -webkit-transform: rotate(-90deg);
          transform: rotate(-90deg);
}

