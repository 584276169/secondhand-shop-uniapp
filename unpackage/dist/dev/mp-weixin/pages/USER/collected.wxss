.content {
  margin: 0 15rpx;
}
.select_content {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 25rpx 0;
}
.select_content .u-input {
  background-color: #f7f5f5;
}
.select_content text {
  margin-left: 25rpx;
  font-size: 30rpx;
}
.select_history {
  position: relative;
  display: flex;
  align-items: center;
}
.select_history text {
  font-size: 30rpx;
  font-weight: bold;
}
.select_history image {
  position: absolute;
  right: 0;
  width: 40rpx;
  height: 40rpx;
}
.history_content {
  margin-top: 15rpx;
  font-size: 22rpx;
}
.history_content text {
  display: inline-block;
  padding: 10rpx 25rpx;
  border: 1rpx solid #f8f8f8;
  border-radius: 35rpx;
  margin: 10rpx;
  background-color: #f7f5f5;
}
.product_content {
  display: flex;
  flex-wrap: wrap;
}
.product_content .product {
  margin: 15rpx;
  padding-bottom: 25rpx;
  border-bottom: 1rpx solid #c8c7cc;
}
.product_content .product image {
  width: 320rpx;
  height: 320rpx;
  border-radius: 25rpx;
}
.product_content .product .info_user {
  margin-top: 15rpx;
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999;
}
.product_content .product .info_user image {
  width: 40rpx;
  height: 40rpx;
}
.text_active {
  color: #E31D1C;
  border: 1rpx solid #E31D1C !important;
}

