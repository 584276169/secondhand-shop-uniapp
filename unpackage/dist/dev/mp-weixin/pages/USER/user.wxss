.user_top {
  position: relative;
  padding: 25rpx;
  padding-bottom: 150rpx;
  background: linear-gradient(#E31D1C, #dd6161);
}
.user_top image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user_top text {
  margin-left: 25rpx;
  color: #FFFFFF;
  font-size: 35rpx;
}
.user_top .updateInfo {
  position: absolute;
  right: 0;
  top: 50rpx;
  background: linear-gradient(#f0ad4e, #ffff20);
  padding: 10rpx 25rpx;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
}
.user_top .updateInfo text {
  font-size: 30rpx;
}

