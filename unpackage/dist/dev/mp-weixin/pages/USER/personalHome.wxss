.person_top {
  background: linear-gradient(#E31D1C, #dd6161);
  height: 180rpx;
}
.person_top .top_content {
  margin: 60rpx 30rpx 0rpx 30rpx;
  background-color: #FFFFFF;
  padding: 15rpx;
  border-radius: 25rpx;
  box-shadow: 1rpx 2rpx 2rpx 2rpx rgba(0, 0, 0, 0.3);
}
.person_top .top_content .top_stock {
  font-size: 27rpx;
}
.person_top .top_content .top_stock .stock_num {
  font-size: 55rpx;
  font-weight: bold;
}
.person_top .top_content .top_img {
  margin-top: -90rpx;
  padding: 15rpx;
  background-color: #FFFFFF;
  border-radius: 50%;
}
.person_top .top_content .top_img image {
  border-radius: 50%;
  width: 140rpx;
  height: 140rpx;
}
.person_top .top_content .top_info {
  font-size: 27rpx;
}
.person_top .top_content .top_info .info_name {
  font-size: 35rpx;
  margin-bottom: 15rpx;
}
.product {
  margin-bottom: 15rpx;
}
.product image {
  width: 270rpx;
  height: 270rpx;
  border-radius: 25rpx;
}
.product .product_info {
  margin-left: 15rpx;
  height: 270rpx;
}
.text_active {
  color: #E31D1C;
  border: 1rpx solid #E31D1C !important;
}

