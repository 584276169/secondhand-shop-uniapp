.product {
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #c0c0c0;
}
.product image {
  width: 230rpx;
  height: 230rpx;
  border-radius: 25rpx;
}
.product .product_info {
  margin-left: 15rpx;
}
.product .info_time {
  font-size: 22rpx;
}
.product .product_controll .controll_view text {
  display: inline-block;
  padding: 10rpx 20rpx;
  background-color: #4cd964;
  border-radius: 30rpx;
  color: #FFFFFF;
  text-align: center;
  font-size: 27rpx;
}
.product .product_controll .controll_delete {
  font-size: 30rpx;
  margin-top: 45rpx;
  text-align: center;
  color: #dd524d;
}
.text_active {
  color: #E31D1C;
  border: 1rpx solid #E31D1C !important;
}
.active_status {
  background-color: #dd524d !important;
}
.controll_Recommended {
  font-size: 30rpx;
  margin-top: 45rpx;
  text-align: center;
  color: #4cd964;
}

