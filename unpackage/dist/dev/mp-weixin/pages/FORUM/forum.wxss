.form_addArticle {
  padding: 25rpx;
  overflow: hidden;
}
.form_addArticle text {
  float: right;
  font-size: 30rpx;
  color: #E31D1C;
}
.forum_content {
  margin-bottom: 25rpx;
}
.forum_content .forum_article image {
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
}
.forum_content .forum_article .article_user {
  margin-left: 15rpx;
  font-size: 27rpx;
  color: #808080;
}
.forum_content .forum_article .article_user .user_text {
  margin-bottom: 10rpx;
  font-size: 30rpx;
  color: #E31D1C;
}
.forum_content .article_text {
  margin: 10rpx 0;
  font-size: 27rpx;
}
.forum_content .article_btn {
  margin-top: 10rpx;
  padding-top: 10rpx;
  border-top: 0.5rpx solid #f8f8f8;
}
.forum_content .article_btn .btn_content {
  flex: 1;
}
.forum_content .article_btn .btn_content .btn_tap {
  text-align: center;
}
.forum_content .article_btn .btn_content .btn_tap image {
  width: 37rpx;
  height: 37rpx;
}
.forum_content .article_btn .btn_content .btn_tap text {
  font-size: 27rpx;
  margin-left: 10rpx;
}
.forum_content .article_btn .btn_content .btn_tap button {
  background-color: #FFFFFF;
  padding: 0;
  height: 37rpx;
  line-height: 37rpx;
}
.forum_content .article_btn .btn_content .btn_tap button::after {
  border: none;
}

