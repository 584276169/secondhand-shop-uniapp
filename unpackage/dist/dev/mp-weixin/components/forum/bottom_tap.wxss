.bottom_content {
  background-color: #f5f5f5;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 25rpx;
}
.bottom_content .tap {
  flex: 1;
  font-size: 30rpx;
}
.bottom_content .tap image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}
.bottom_content .tap button {
  font-size: 30rpx;
  background-color: #f5f5f5;
  padding: 0;
  height: 40rpx;
  line-height: 40rpx;
}
.bottom_content .tap button::after {
  border: none;
}
.bottom_input {
  background-color: #FFFFFF;
  position: fixed;
  z-index: 11;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 25rpx;
}
.bottom_input input {
  background-color: #f7f5f5;
  color: #333;
  padding: 15rpx;
  padding-left: 35rpx;
  border-radius: 45rpx;
  margin-bottom: 15rpx;
  width: 500rpx;
}
.bottom_input .bottom_btn {
  display: inline-block;
  font-size: 30rpx;
  padding: 15rpx 25rpx;
  background: linear-gradient(#E31D1C, #dd6161);
  color: #FFFFFF;
  border-radius: 40rpx;
  margin-left: 15rpx;
  margin-bottom: 15rpx;
}

